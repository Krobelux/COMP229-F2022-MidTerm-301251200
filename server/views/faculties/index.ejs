<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Faculty Information</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/server/views/faculties/add.ejs" class="btn btn-primary"><i class="fa fa-plus"></i> Add a faculty</a>
      <!-- Added route in href to fix button-->

      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Faculty ID</th>
              <th class="text-center">Faculty Name</th>
              <th class="text-center">Department</th>
              <th class="text-center">Subject</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < faculties.length; count++) { %>
            <tr>
              <td><%= faculties[count].Facultyid %></td>
              <td class="text-center"><%= faculties[count].Facultyname %></td>
              <td class="text-center"><%= faculties[count].Department %></td>
              <td class="text-center"><%= faculties[count].Subject %></td>

              <td class="text-center">
                <a href="/faculties/details/<%= faculties[count]._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-info"></i> Edit</a>
                <!-- Added route in href and class info to fix button-->
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
              </td>
              
              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE (Do you mean Delete button...?) -->
                <!-- ------------------------ -->
                <!-- Added the href to the delete + fixed the delete button location -->
                <a href="/faculties/delete/<%= faculties[count]._id %>" class="btn btn-warning btn-sm">
                <i class="fas fa-trash"></i> Delete</a></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      



    </main>

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

